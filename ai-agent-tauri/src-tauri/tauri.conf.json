{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ai-agent-tauri",
  "version": "0.1.0",
  "identifier": "com.aiagent.tauri",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "shell": {
      "env": ["OPENAI_API_KEY"]
    }
  },
  "app": {
    "windows": [
      {
        "title": "ai-agent-tauri",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
